SELECT *,
    ->     CASE
    ->         WHEN customer_name LIKE 'a%' THEN 'VIP'
    ->         WHEN customer_name LIKE 'e%' THEN 'VIP'
    ->         WHEN customer_name LIKE 'm%' THEN 'VIP'
    ->         WHEN customer_name LIKE 's%' THEN 'VIP'
    ->         ELSE 'REGULAR'
    ->     END AS VIPTICKET
    -> FROM tickets;
