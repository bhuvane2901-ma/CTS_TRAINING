SELECT ticket_id, customer_name, status,
    ->     CASE status
    ->         WHEN 'open' THEN 'Active'
    ->         WHEN 'escalated' THEN 'Active'
    ->         WHEN 'closed' THEN 'Inactive'
    ->         ELSE 'Waiting'
    ->     END AS Ticket_status
    -> FROM tickets;
